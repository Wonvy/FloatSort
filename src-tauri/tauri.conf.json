{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "FloatSort",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "window": {
        "all": true,
        "create": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": false,
      "identifier": "com.floatsort.app",
      "icon": []
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "FloatSort",
        "width": 360,
        "height": 520,
        "center": true,
        "resizable": true,
        "maximizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "fileDropEnabled": true
      }
    ]
  }
}



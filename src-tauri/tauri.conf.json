{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/tauri-v1.5.0/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "FloatSort",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "window": {
        "all": true,
        "create": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "identifier": "com.floatsort.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Utility",
      "shortDescription": "文件自动整理工具",
      "longDescription": "FloatSort 是一款智能的文件自动整理工具，可以根据规则自动整理文件。",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "FloatSort",
        "width": 360,
        "height": 520,
        "center": true,
        "resizable": true,
        "maximizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "fileDropEnabled": true,
        "visible": false
      }
    ]
  }
}
